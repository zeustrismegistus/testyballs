{
  "name": "bootstrapper",
  "version": "1.0.0",
  "description": "watches file system at config.watchPaths for .js files to be added.  upon adding a file, it then packages that as a node service at the location config.deployPath + filename",
  "main": "service.js",
  "scripts": {
    "start": "node service.js"
  },
  "author": "zeustrismegistus@tutanota.com",
  "license": "GPL3",
  "dependencies": {
    "body-parser": "^1.17.1",
    "chokidar": "latest",
    "express": "^4.13.4",
    "express-promise": "^0.4.0",
    "fs-extra": "^2.0.0",
    "node-inspector": "^0.12.8",
    "shelljs": "^0.7.6"
  },
  "config": {
    "watchPath": "./watching",
    "spawnPath": "./deploy",
    "port": 3000,
    "spawnPortStart": 3001,
	"spawnDebugPortStart" : 5859,
	"debugPort": 5858,
	"runDebugEnabled" : true, 
	"runDebuggerService" : true, 
	"runDebuggerClient" : true, 
	"runClient" : true,
	"spawnDebugEnabled" : true, 
	"spawnDebuggerService" : true, 
	"spawnDebuggerClient" : true, 
	"spawnClient" : true
  },
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/zeustrismegistus/testyballs"
  },
  "bugs": {
    "url": "https://github.com/zeustrismegistus/testyballs/issues"
  },
  "homepage": "https://github.com/zeustrismegistus/testyballs"
}
